@model Company

<div class="card shadow border-0 mt-4">
	<div class="card-body p-4">
		<form method="post">
			<input asp-for="@Model.Id" hidden />
			<div class="card-header bg-secondary bg-gradient mt-0 py-3">
				<div class="col-12  text-center">
					 <h2>@(Model.Id != 0  ? "Update" : "Create") a company!</h2> 
				</div>
			</div>
			<div class="row">
				<div class="col-9">
					<div class="wb-3 row p-1">
						<label asp-for="@Model.Name" class="p-0"></label>
						<input asp-for="@Model.Name" class="form-control" />
						<span asp-validation-for="@Model.Name" class="text-danger"></span>
					</div>
					<div class="wb-3 row p-1">
						<label asp-for="@Model.StreetAddress" class="p-0"></label>
						<input asp-for="@Model.StreetAddress" class="form-control" />
						<span asp-validation-for="@Model.StreetAddress" class="text-danger"></span>
					</div>
					<div class="wb-3 row p-1">
						<label asp-for="@Model.City" class="p-0"></label>
						<input asp-for="@Model.City" class="form-control" />
						<span asp-validation-for="@Model.City" class="text-danger"></span>
					</div>
					<div class="wb-3 row p-1">
						<label asp-for="@Model.State" class="p-0"></label>
						<input asp-for="@Model.State" class="form-control" />
						<span asp-validation-for="@Model.State" class="text-danger"></span>
					</div>
					<div class="wb-3 row p-1">
						<label asp-for="@Model.PostalCode" class="p-0"></label>
						<input asp-for="@Model.PostalCode" class="form-control" />
						<span asp-validation-for="@Model.PostalCode" class="text-danger"></span>
					</div>
					<div class="wb-3 row p-1">
						<label asp-for="@Model.PhoneNumber" class="p-0"></label>
						<input asp-for="@Model.PhoneNumber" class="form-control" />
						<span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
					</div>
					<button type="submit" class="btn btn-primary" style="width:150px">Create</button>
				</div>
			</div>
		</form>

	</div>
</div>
@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
