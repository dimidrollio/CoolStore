@model List<Category>

<div class="container">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">
				Category list
			</h2>
		</div>
		<div class="col-col-6 text-mg-start mb-2">
			<a asp-controller="Category" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-circle"> Create new Category</i>
			</a>
		</div>
	</div>
	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>
					Category name
				</th>
				<th>
					Display order
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach( var obj in Model.OrderBy(x => x.DisplayOrder))
			{
			<tr>
				<th>
					@obj.Name
				</th>
				<th>
					@obj.DisplayOrder
				</th>

				<th class="text-center">
					<a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
						<i class="bi bi-pencil-square"> Edit</i>
					</a>
						<a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
						<i class=" bi bi-trash3"> Delete</i>
					</a>
				</th>
			</tr>
			}
		</tbody>
	</table>
</div>

