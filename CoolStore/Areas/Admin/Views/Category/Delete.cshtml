@model Category


<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient mt-0 py-3">
		<div class="col-12  text-center">
			<h2>Delete a category!</h2>
		</div>
	</div>
	<div class="card-body p-4">
	<form method="post">
		<input asp-for="Id" hidden />
		<div class="wb-3 row p-1">
			<label asp-for="Name" class="p-0"></label>
			<input asp-for="Name" class="form-control" disabled />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="wb-3 row p-1">
			<label asp-for="DisplayOrder" class="p-0"></label>
			<input asp-for="DisplayOrder" class="form-control" disabled/>
			<span asp-validation-for="DisplayOrder" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
	</form>
	</div>
</div>
